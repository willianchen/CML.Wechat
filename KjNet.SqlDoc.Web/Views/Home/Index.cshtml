    <div class="left-nav">
        <div id="side-nav">
            <ul id="nav">
                <li class="open">
                    <a href="javascript:;">
                        <i class="iconfont layui-icon"></i>
                        <cite>数据库连接</cite>
                        <i class="iconfont nav_right">&#xe6a6;</i>
                    </a>
                    <ul class="sub-menu">
                        @if (Model != null && Model.Any())
                        {
                            int index = 0;
                            foreach (var item in Model)
                            {
                                <li>
                                    <a _href="/DataBase/index/@item.Id">
                                        <i class="iconfont">&#xe6a7;</i>
                                        <cite>@item.Title [@item.DbType]</cite>
                                    </a>
                                </li>

                                index++;
                            }
                        }
                    </ul>
                </li>
            </ul>
        </div>
    </div>
